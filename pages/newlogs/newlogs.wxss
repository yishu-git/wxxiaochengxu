.bigbox {
  margin-top: 200rpx;
  box-sizing: border-box;
  background-color: #cccccc;
  padding: 50rpx;
  box-sizing: border-box;
  width: 100%;
  height: 1000rpx;
  padding: 30rpx 20rpx;
}

van-button {
  border-radius: 50rpx !important;
  overflow: hidden;
}

van-button button {
  background-color: blueviolet !important;
  color: #f5f5f5 !important;
  border-radius: 50rpx !important;
  width: 80%;
  border-radius: 50rpx;
}

.change {
  padding: 0 20rpx;
  box-sizing: border-box;
  height: 90rpx;
  line-height: 90rpx;
  color: blue;
  background-color: #f5f5f5;
  display: flex;
  justify-content: space-between;
}

.zhuanru {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.canvas {
  width: 128px;
  height: 128px;
  margin: 40rpx auto;
}

.neibox {
  text-align: center;
  width: 100%;
  height: 70%;
  background-color: #ffffff;
}

.lists {

  width: 100%;
  padding: 35rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  height: 600rpx;
  background: white;


}

.lists .search {

  align-items: center;
  justify-content: space-between;
  display: flex;
  height: 106rpx;
}

.search input {
  border-radius: 10rpx;
  width: 495rpx;
  height: 68rpx;
  border: 1px solid #ccc;
  box-sizing: border-box;
}

.everylist {
  position: relative;
  align-items: center;
  height: 127rpx;
  border-bottom: 1px solid #cccccc;
  display: flex;
}

.listleft {
  display: flex;
}

.listleft image {
  margin-right: 30rpx;
  width: 71rpx;
  height: 71rpx;
}

.rightred {
  position: absolute;
 left: 660rpx;
  top: 50%;
  transform: translateY(-50%);
}
.scroll{
  height: 492rpx;
  overflow: hidden;
}